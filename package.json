{
  "name": "number-one",
  "version": "1.0.0",
  "description": "A Node.js based Twitch chat bot",
  "main": "index.js",
  "scripts": {
    "start": "node dist/index.js",
    "build": "npm run build:typescript && npm run build:scss && npm run copy && cd ./src/web/video && npm run build",
    "build:typescript": "tsc",
    "build:scss:overlays": "node-sass --output-style compressed --include-path src src/web/overlays/styles  -o src/web/overlays/wwwroot/styles",
    "build:scss:video": "",
    "build:scss": "npm run build:scss:overlays && npm run build:scss:video",
    "copy": "npm run copy:web && npm run copy:assets",
    "copy:web:overlay": "copyfiles src/web/overlays/wwwroot/**/* dist/web/overlays/wwwroot -u 4",
    "copy:web:video": "",
    "copy:web": "npm run copy:web:overlay && npm run copy:web:video",
    "copy:assets:overlays": "copyfiles assets/**/* dist/web/overlays/wwwroot/",
    "copy:assets:video": "",
    "copy:assets": "npm run copy:assets:overlays && npm run copy:assets:video",
    "dev": "nodemon -L -e js,ts,htm,env,scss,json,vue --watch src --exec \"npm run build && npm run start\"",
    "test": "mocha -r ts-node/register src/**/*spec.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MichaelJolley/number-one.git"
  },
  "author": "Michael Jolley <mike@sparcapp.io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MichaelJolley/number-one/issues"
  },
  "homepage": "https://github.com/MichaelJolley/number-one#readme",
  "dependencies": {
    "@types/node": "^14.0.27",
    "axios": "^0.19.2",
    "comfy.js": "^1.1.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "faunadb": "^2.14.2",
    "nexmo": "^2.7.0-beta-1",
    "opentok": "^2.10.0",
    "socket.io": "^2.3.0",
    "uuid": "^8.3.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.12",
    "@types/express": "^4.17.7",
    "@types/mocha": "^8.0.1",
    "@types/sinon": "^9.0.4",
    "@types/socket.io": "^2.1.10",
    "@types/tmi.js": "^1.4.0",
    "chai": "^4.2.0",
    "copyfiles": "^2.3.0",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.11.0",
    "mocha": "^8.1.0",
    "node-sass": "^4.14.1",
    "sinon": "^9.0.2",
    "ts-loader": "^8.0.1",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  }
}